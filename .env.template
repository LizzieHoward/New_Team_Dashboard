# Environment Variables Template
# ============================
# Copy this file to .env and fill in your actual values
# This template shows all available configuration options

# API Keys (Required)
# ===================
# OpenWeatherMap API Key - Get from https://openweathermap.org/api
OPENWEATHER_API_KEY=your_openweather_api_key_here

# Backup API Key (Optional)
OPENWEATHER_API_KEY_BACKUP=your_backup_api_key_here

# General API Key (Optional)
API_KEY=your_general_api_key_here

# Database Configuration
# ======================
WEATHER_STORAGE_TYPE=sql
WEATHER_DATABASE_PATH=data/weather_dashboard.db

# Application Settings
# ===================
DEBUG=True
LOG_LEVEL=INFO

# Third-party Service Keys (Optional)
# ===================================
OPENAI_API_KEY=your_openai_api_key_here
GOOGLE_API_KEY=your_google_api_key_here

